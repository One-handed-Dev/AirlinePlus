@page
@model Areas.Dashboard.Pages.Interaction.IndexModel

@{
    Layout = "Shared/_DashboardLayout";
    ViewData["title"] = "مدیریت ایمیل ها";
}

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["title"]</h4>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">جستجو در ایمیل ها</h3>
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form" method="get">
                    <div class="form-group">
                        <label class="sr-only" asp-for="Command.RecieverName"></label>
                        <input class="form-control" asp-for="Command.RecieverName" placeholder="نام گیرنده">
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="Command.RecieverEmail"></label>
                        <input class="form-control" asp-for="Command.RecieverEmail" placeholder="ایمیل گیرنده">
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="Command.Subject"></label>
                        <input class="form-control" asp-for="Command.Subject" placeholder="موضوع ایمیل">
                    </div>
                    <button permission="@InteractionPermissions.Email.Search" type="submit" class="btn btn-success m-l-10">جستجو</button>
                    <a class="btn btn-primary m-l-10" asp-page="./Index">مشاهده همه</a>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست ایمیل ها (@Model.List.Count)</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>گیرنده</th>
                                    <th>ایمیل</th>
                                    <th>موضوع</th>
                                    <th>متن</th>
                                    <th>تاریخ ثبت</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.List)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.RecieverName</td>
                                        <td>@item.RecieverEmail</td>
                                        <td>@item.Subject</td>
                                        <td>@item.Message</td>
                                        <td>@item.CreationDate</td>
                                        <td>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/AdminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/AdminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}