@page
@model Hotels.IndexModel

@{
    Layout = "Shared/_DashboardLayout";
    ViewData["title"] = "مدیریت هتل ها";
}

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["title"]</h4>
        <p class="pull-left">
            <a permission="@HotelPermissions.Hotel.Create" class="btn btn-success btn-lg" asp-page="./Create">ایجاد هتل جدید</a>
        </p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">جستجو در هتل ها</h3>
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form" method="get">
                    <div class="form-group">
                        <div class="checkbox checkbox-primary">
                            <input asp-for="Command.IsRemoved" />
                            <label asp-for="Command.IsRemoved">
                                جستجو در غیرفعال ها
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="Command.Name"></label>
                        <input class="form-control" asp-for="Command.Name" placeholder="نام هتل">
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="Command.Address"></label>
                        <input class="form-control" asp-for="Command.Address" placeholder="نشانی هتل">
                    </div>
                    <button permission="@HotelPermissions.Hotel.Search" type="submit" class="btn btn-success m-l-10">جستجو</button>
                    <a class="btn btn-primary m-l-10" asp-page="./Index">مشاهده همه</a>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row" id="HotelClassesLevel03Div">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست هتل ها</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>عکس</th>
                                    <th>نام</th>
                                    <th>شهر</th>
                                    <th>ستاره</th>
                                    <th>وضعیت</th>
                                    <th>تعداد اتاق</th>
                                    <th>تعداد عکس</th>
                                    <th>تاریخ ایجاد</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.List)
                                {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>
                                        <img src="~/UploadedFiles/@item.Picture" style="width:100px; height:100px" />

                                    </td>
                                    <td>@item.Name</td>
                                    <td>@item.City</td>
                                    <td>@item.StarsCount</td>
                                    <td class="text-center">
                                        @if (!item.IsRemoved)
                                        {
                                            <i class="fa fa-check fa-2x text-success"></i>
                                        }
                                        else
                                        {
                                            <i class="fa fa-remove fa-2x text-danger"></i>
                                        }
                                    </td>
                                    <td>@item.RoomsCount</td>
                                    <td>@item.PicturesCount</td>
                                    <td>@item.CreationDate</td>
                                    <td>
                                        <a permission="@HotelPermissions.Hotel.Edit" class="btn btn-warning m-b-5" asp-page="./Edit" asp-route-id="@item.Id">
                                            ویرایش
                                        </a>
                                        @if (!item.IsRemoved)
                                        {
                                            <a permission="@HotelPermissions.Hotel.Remove" asp-page="./Index" asp-page-handler="Remove" asp-route-id="@item.Id"
                                               class="btn btn-danger m-b-5">حذف</a>
                                        }
                                        else
                                        {
                                            <a permission="@HotelPermissions.Hotel.Restore" asp-page="./Index" asp-page-handler="Restore" asp-route-id="@item.Id"
                                               class="btn btn-success m-b-5">فعال</a>
                                        }
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/adminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}