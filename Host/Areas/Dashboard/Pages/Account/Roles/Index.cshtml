@page
@model Host.Areas.Dashboard.Pages.Account.Roles.IndexModel
@{
    Layout = "Shared/_DashboardLayout";
    ViewData["title"] = "مدیریت نقش ها";
}

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["title"]</h4>
        <p class="pull-left">
            <a permission="@AccountPermissions.Role.Create" class="btn btn-success btn-lg" asp-page="Create">ایجاد نقش جدید</a>
        </p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">جستجو در نقش ها</h3>
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form" method="get">
                    <div class="form-group">
                        <div class="checkbox checkbox-primary">
                            <input asp-for="Command.IsRemoved" />
                            <label asp-for="Command.IsRemoved">
                                جستجو در غیرفعال ها
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="checkbox checkbox-primary">
                            <input asp-for="Command.IsAllowedToEnterDashboard" />
                            <label asp-for="Command.IsAllowedToEnterDashboard">
                                جستجو در مجازها به پنل ادمین
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="Command.Name"></label>
                        <input class="form-control" asp-for="Command.Name" placeholder="نام">
                    </div>
                    <button permission="@AccountPermissions.Role.Search" type="submit" class="btn btn-success m-l-10">جستجو</button>
                    <a class="btn btn-primary m-l-10" asp-page="./Index">مشاهده همه</a>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست نقش ها (@Model.RolesList.Count)</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>نام</th>
                                    <th>وضعیت</th>
                                    <th>دسترسی به پنل ادمین</th>
                                    <th>تاریخ ایجاد</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.RolesList)
                                {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Name</td>
                                    <td class="text-center">
                                        @if (!item.IsRemoved)
                                        {
                                            <i class="fa fa-check fa-2x text-success"></i>
                                        }
                                        else
                                        {
                                            <i class="fa fa-remove fa-2x text-danger"></i>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (item.IsAllowedToEnterDashboard)
                                        {
                                            <i class="fa fa-check fa-2x text-success"></i>
                                        }
                                        else
                                        {
                                            <i class="fa fa-remove fa-2x text-danger"></i>
                                        }
                                    </td>
                                    <td>@item.CreationDate</td>
                                    <td>
                                        <a permission="@AccountPermissions.Role.Edit" class="btn btn-warning m-b-5" asp-page="Edit" asp-route-id="@item.Id">
                                            ویرایش
                                        </a>
                                        @if (!item.IsRemoved)
                                        {
                                            <a permission="@AccountPermissions.Role.Remove" asp-page="./Index" asp-page-handler="Remove" asp-route-id="@item.Id"
                                               class="btn btn-danger m-b-5">حذف</a>
                                        }
                                        else
                                        {
                                            <a permission="@AccountPermissions.Role.Restore" asp-page="./Index" asp-page-handler="Restore" asp-route-id="@item.Id"
                                               class="btn btn-success m-b-5">فعال</a>
                                        }
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/AdminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/AdminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}